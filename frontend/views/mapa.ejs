<script src="/js/mapa_googlemaps.js"></script>

<style>
/* Estilos base del mapa */
.mapa-container {
    position: relative;
    height: 100vh;
}

.google-map {
    width: 100%;
    height: 100%;
    border-radius: 10px;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
}

/* Estilos espec√≠ficos para la vista de administrador */
.admin-view {
    display: grid;
    grid-template-columns: 300px 1fr;
    gap: 10px;
}

.admin-panel {
    background: #2c3e50;
    color: white;
    padding: 20px;
    overflow-y: auto;
    border-radius: 0 10px 10px 0;
    box-shadow: 2px 0 10px rgba(0,0,0,0.1);
}

.admin-panel h3 {
    margin-top: 0;
    margin-bottom: 20px;
    text-align: center;
    color: #ecf0f1;
    border-bottom: 2px solid #34495e;
    padding-bottom: 10px;
}

.control-group {
    margin-bottom: 25px;
    padding: 15px;
    background: #34495e;
    border-radius: 8px;
}

.control-group h4 {
    margin: 0 0 15px 0;
    color: #ecf0f1;
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.admin-controls .btn {
    width: 100%;
    margin-bottom: 10px;
    padding: 12px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-weight: bold;
    transition: all 0.3s ease;
}

.btn-primary {
    background: #3498db;
    color: white;
}

.btn-primary:hover {
    background: #2980b9;
    transform: translateY(-2px);
}

.btn-secondary {
    background: #95a5a6;
    color: white;
}

.btn-secondary:hover {
    background: #7f8c8d;
    transform: translateY(-2px);
}

.btn-warning {
    background: #f39c12;
    color: white;
}

.btn-warning:hover {
    background: #e67e22;
    transform: translateY(-2px);
}

.admin-filters {
    position: absolute;
    top: 20px;
    right: 20px;
    background: rgba(44, 62, 80, 0.95);
    color: white;
    padding: 15px;
    border-radius: 10px;
    box-shadow: 0 4px 15px rgba(0,0,0,0.2);
    z-index: 1000;
    max-width: 200px;
}

.admin-filters h3 {
    margin: 0 0 15px 0;
    font-size: 1rem;
    text-align: center;
    border-bottom: 1px solid #34495e;
    padding-bottom: 8px;
}

/* Estilos espec√≠ficos para la vista de usuario */
.user-view {
    position: relative;
}

.user-filters {
    position: absolute;
    top: 20px;
    left: 20px;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    z-index: 1000;
    max-width: 250px;
    border: 1px solid rgba(255,255,255,0.2);
}

.user-filters h3 {
    margin: 0 0 15px 0;
    color: #2c3e50;
    font-size: 1.1rem;
    text-align: center;
    border-bottom: 2px solid #3498db;
    padding-bottom: 8px;
}

/* Estilos comunes para filtros */
.filtros-container {
    display: flex;
    flex-direction: column;
    gap: 8px;
}

.filtro-checkbox {
    display: flex;
    align-items: center;
    cursor: pointer;
    padding: 8px;
    border-radius: 5px;
    transition: all 0.3s ease;
}

.admin-filters .filtro-checkbox:hover {
    background: rgba(255,255,255,0.1);
}

.user-filters .filtro-checkbox {
    background: rgba(255,255,255,0.5);
}

.user-filters .filtro-checkbox:hover {
    background: rgba(52, 152, 219, 0.1);
    transform: translateX(3px);
}

.filtro-checkbox input[type="checkbox"] {
    margin-right: 10px;
    transform: scale(1.1);
}

/* Estad√≠sticas */
.estadisticas-container {
    display: flex;
    flex-direction: column;
    gap: 8px;
}

.stat-item {
    display: flex;
    justify-content: space-between;
    padding: 8px 12px;
    background: rgba(255,255,255,0.1);
    border-radius: 5px;
}

.stat-label {
    color: #bdc3c7;
    font-size: 0.9rem;
}

.stat-value {
    color: #ecf0f1;
    font-weight: bold;
}

/* Info panel para usuarios */
.info-panel {
    border-top: 1px solid #ecf0f1;
    padding-top: 15px;
    margin-top: 15px;
}

.info-panel h4 {
    margin: 0 0 10px 0;
    color: #2c3e50;
    font-size: 0.95rem;
}

.info-text {
    font-size: 0.85rem;
    color: #7f8c8d;
    line-height: 1.4;
    margin-bottom: 15px;
}

.estadisticas-simples {
    display: flex;
    justify-content: center;
}

.stat-simple {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 10px;
    background: linear-gradient(135deg, #3498db, #2980b9);
    border-radius: 8px;
    color: white;
    box-shadow: 0 2px 8px rgba(52, 152, 219, 0.3);
}

.stat-icon {
    font-size: 1.2rem;
    margin-bottom: 5px;
}

.stat-number {
    font-size: 1.5rem;
    font-weight: bold;
    margin-bottom: 2px;
}

.stat-text {
    font-size: 0.8rem;
    opacity: 0.9;
}

/* Panel de detalles */
.detalles-container {
    background: #ffffff;
    border-left: 3px solid #3498db;
}

.admin-details {
    background: #ecf0f1;
}

.user-details .detalle-acciones {
    display: none; /* Ocultar botones de edici√≥n para usuarios */
}

/* Loading */
.loading {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    z-index: 1000;
    background: rgba(255,255,255,0.9);
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
}

.loading-spinner {
    width: 40px;
    height: 40px;
    border: 4px solid #f3f3f3;
    border-top: 4px solid #3498db;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin: 0 auto 10px;
}

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

/* Responsive */
@media (max-width: 768px) {
    .admin-view {
        grid-template-columns: 1fr;
        grid-template-rows: auto 1fr;
    }
    
    .admin-panel {
        max-height: 300px;
        border-radius: 10px 10px 0 0;
    }
    
    .user-filters, .admin-filters {
        position: static;
        margin: 10px;
        max-width: none;
    }
}
</style>

